<div class="bg-gray-100 text-gray-800">
  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">Questions </h1>
    <table class="min-w-full bg-white shadow-md rounded-md overflow-hidden">
        <button class='bg-red-500 my-2 rounded-lg p-1'><%= link_to "create Question", new_question_path %></button>
        <button class='bg-red-500 my-2 rounded-lg p-1'><%= link_to "Exam", '' %></button>

      <thead class="bg-gray-200">
        <tr>
          <th class="py-2 px-4 border-b">ID</th>
          <th class="py-2 px-4 border-b">Title</th>
          <th class="py-2 px-4 border-b">Description</th>

          <th class="py-2 px-4 border-b">Schema</th>
          <th class="py-2 px-4 border-b">Options</th>
          <th class="py-2 px-4 border-b">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @questions.each do |question| %>
          <tr class="border-t">
            <td class="py-2 px-4 border-b"><%= question.id %></td>
            <td class="py-2 px-4 border-b"><%= question.description %></td>
            <td class="py-2 px-4 border-b"><%= question.title %></td>
            <td class="py-2 px-4 border-b"><%= question.schema %></td>
            <td class="py-2 px-4 border-b"><%= question.options %></td>
            <td class="py-2 px-4 border-b">
                <%= link_to "Edit",edit_question_path(question) %>
                <%= link_to "Destroy",question_path(question), method: :delete, data:{confirm:"are you sure"} %>
              <a href="/question/<%= question.id %>/edit" class="text-blue-600 hover:text-blue-800">Update</a>
 
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>